{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {"type": "Gain", "args": {"p": 0.1, "min_gain_in_db": -15.0, "max_gain_in_db":  5.0}},
      {"type": "PolarityInversion", "args": {"p": 0.1}},
      {"type": "AddColoredNoise", "args": {"p": 0.1, "sample_rate": 20}}
    ],
    "spectrogram": [
      {"type": "TimeMasking", "args": {"p": 0.1, "time": 20}},
      {"type": "FrequencyMasking", "args": {"p": 0.1, "freq_mask_param": 30, "frequency": 20}}
    ]
  },
  "arch": {
    "type": "MainModel1",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512,
      "num_layers": 3,
      "num_heads": 0
    }
  },
  "data": {
    "train": {
      "batch_sampler": {
        "type": "GroupLengthBatchSampler",
        "args": {
          "batch_size": 32,
          "batches_per_group": 3
        }
      },
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJDataset",
          "args": {
              "mode": "train",
              "max_audio_length": 30.0,
              "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
              "part": "test-clean",
              "max_audio_length": 30.0,
              "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 4e-05
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam search)",
        "beam_size": 10
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam search)",
        "beam_size": 10
      }
    },
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
      "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 200,
            "epochs": 200,
            "anneal_strategy": "cos",
            "max_lr": 0.0001,
            "pct_start": 0.1
        }
  },
  "trainer": {
    "epochs": 2000,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 200,
    "grad_norm_clip": 10
  }
}
